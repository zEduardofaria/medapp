<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/dashstyle.css">
    </head>
    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>
                        Dashboard
                    </h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            Stats
                        </div>
                        <div class="card-body">
                            <table class="table table-dark">
                                <tr>
                                    <td>Total Stock</td>
                                    <td>Total Brands</td>
                                </tr>
                                <tr>
                                    {{#n1}}<td><h1>{{sum}}</h1></td>{{/n1}}
                                    {{#n2}}<td><h1>{{count}}</h1></td>{{/n2}}
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            Stats
                        </div>
                        <div class="card-body">
                            <a href="/add" class="btn btn-primary">Add Medicine</a>
                            <a href="/meds" class="btn btn-primary">Medicine List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </body>
</html>